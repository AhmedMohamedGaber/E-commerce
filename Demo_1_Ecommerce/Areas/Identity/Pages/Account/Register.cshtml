@page
@using Demo_1_Ecommerce
@using Demo_1_Ecommerce.Data
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Register Page</h1>
                <nav class="d-flex align-items-center">
                    <a href="~/Customer/Home/Index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="~/Identity/Account/Login">Login<span class="lnr lnr-arrow-right"></span></a></a>

                    <a href="~/Identity/Account/Register">Register</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->


<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">
            <!-- Left side with image and hover text -->
            <div class="col-lg-6">
                <div class="login_box_img">
                    <img class="img-fluid" src="~/MainEcommerce/img/login.jpg" alt="Register Image">
                    <div class="hover">
                        <h4>Already a member?</h4>
                        <p>Log in now to access your account and enjoy our exclusive offers and services!</p>
                        <a class="primary-btn" href="@Url.Page("./Login", new { returnUrl = Model.ReturnUrl })">Log In</a>
                    </div>
                </div>
            </div>

            <!-- Right side with registration form -->
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Create an Account</h3>
                    <form class="row login_form"  method="post" id="contactForm" novalidate="novalidate" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" placeholder="Name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="Input.City" class="form-control" autocomplete="address-level2" aria-required="true" placeholder="City" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <input asp-for="Input.Address" class="form-control" autocomplete="street-address" aria-required="true" placeholder="Address" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <!-- Optional role selection if user is an Admin -->
                        @if (User.IsInRole(SD.AdminRole))

                        {
                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="RoleRadio" value="@SD.AdminRole" id="roleAdmin" />
                                    <label class="form-check-label" for="roleAdmin">@SD.AdminRole</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="RoleRadio" value="@SD.EditorRole" id="roleEditor" />
                                    <label class="form-check-label" for="roleEditor">@SD.EditorRole</label>
                                </div>
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="RoleRadio" value="@SD.CustomerRole" id="roleCustomer" />
                                    <label class="form-check-label" for="roleCustomer">@SD.CustomerRole</label>
                                </div>
                            </div>
                        }

                        <div class="col-md-12 form-group">
                            <button type="submit" class="primary-btn w-100">@((User.IsInRole(SD.AdminRole) ? "Create New User" : "Register"))</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
