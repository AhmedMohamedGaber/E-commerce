@model Category

@{

    ViewBag.PageTitle = "Category Managment";
    ViewBag.CardTitle = "Create Category";
    Layout = "_AdminLayout";
}


<form  method="post">

   <div class="mb-3">
      <label asp-for="name"></label>
      <input asp-for="name"  class="form-control"/>
        <span asp-validation-for="name" class="text-danger"></span>
  </div>

    <div class="mb-3">
        <label asp-for="description"></label>
        <textarea id="default-editor" asp-for="description" class="form-control"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input type="submit" class="btn btn-primary"  value="Create"/>
        @* <input type="submit" class="btn btn-outline-primary" value="Back" asp-action="index" asp-controller="Category" /> *@
        <a asp-action="index" asp-controller="Category" class="btn btn-outline-secondary">Cancel</a>
    </div>

</form>
