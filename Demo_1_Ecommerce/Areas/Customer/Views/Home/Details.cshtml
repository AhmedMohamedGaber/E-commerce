<script>
    function changeQuantity(amount) {
        var input = document.getElementById('sst');
        var value = parseInt(input.value, 10);

        if (!isNaN(value)) {
            value += amount;
            if (value < 1) value = 1; // Ensuring the quantity does not go below 1
            input.value = value;
        }
    }
</script>