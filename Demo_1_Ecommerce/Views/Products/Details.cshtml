@model Demo_1_Ecommerce.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <!-- Add other fields similarly -->

        <dt class="col-sm-2">
            Product Images
        </dt>
        <dd class="col-sm-10">
            @foreach (var image in Model.ProductImages)
            {
                <img src="@image.ImageUrl" alt="Product Image" style="max-width: 200px; max-height: 200px;" />
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
